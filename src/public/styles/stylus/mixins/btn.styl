btn(col1, col2, col3, col4, col5) {
  box-shadow: inset 0px 1px 0px 0px col1;
  background: linear-gradient(to bottom, col2 5%, col3 100%);
  background-color: col2;
  border-radius: 4px;
  border: 1px solid col4;
  display: inline-block;
  cursor: pointer;
  color: col5;
  font-family: Open Sans;
  font-size: 15px;
  font-weight: bold;
  padding: 6px 24px;
  text-decoration: none;
  text-shadow: 0px 1px 0px col1;
}

btnHover(col2, col3) {
  background: linear-gradient(to bottom, col3 5%, col2 100%);
  background-color: col3;
}

btnActive(col2, col3) {
  background: linear-gradient(to bottom, col2 5%, col3 100%);
}